{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nawalasansol/multi-client",
            "hostname": "client",
            "essential": false      
        },
        {
            "name": "server",
            "image": "nawalasansol/multi-server",
            "hostname": "api",
            "essential": false      
        },
        {
            "name": "worker",
            "image": "nawalasansol/multi-worker",
            "hostname": "worker",
            "essential": false      
        },
        {
            "name": "nginx",
            "image": "nawalasansol/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server" ]      
        }
    ]

}